<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BakemonoEgo.MainPage">
    

    <ScrollView>
        <VerticalStackLayout Margin="50">
            <Image
                Source="placeholder.jpg"
                HeightRequest="500"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label 
                Text="BakemonoEgo"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Padding="30"
                FontSize="120"/>

            <VerticalStackLayout MaximumWidthRequest="500">
                <Button
                    x:Name="NavBtn"
                    Text="Start here!" 
                    BorderWidth = "3"
                    BorderColor = "#1D1D20"
                    Margin="20"
                    FontSize="32"
                    SemanticProperties.Hint="Let's you start the personality test"
                    Clicked="NavigateToQuestion1_Clicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
