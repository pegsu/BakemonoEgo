<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BakemonoEgo.Views.ResultBird"
             Title="ResultBird">
    <VerticalStackLayout Spacing="20" MaximumWidthRequest="1200" Padding="50">
        <Image
            Source="bird.png"
            HeightRequest="500"
            Aspect="AspectFit"
            SemanticProperties.Description="a placeholder image" 
         />
        
        <Label 
            Text="BIRD"
            FontSize="72"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"
        />

        <Label 
            Text="Humble, Reflective, Wistful "
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize = "30"
        />

        <Label
            Text="Bird Spirits are careful and calculated. They yearn for freedom, but often feel like they're trapped in a cage sometimes. They might not know, but there's unlimited potential within them. Wether they're birds of prey or songbirds, their range is limitless. Will you spread your wings and fly?"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            FontSize="22"
            Margin="20"
        />

    </VerticalStackLayout>
</ContentPage>